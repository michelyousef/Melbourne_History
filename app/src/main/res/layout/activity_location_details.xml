<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/no_padding"
    android:paddingLeft="@dimen/no_padding"
    android:paddingRight="@dimen/no_padding"
    android:paddingTop="@dimen/no_padding"
    android:orientation="vertical"
    tools:context="com.example.sit302_team.melbourne_history.LocationDetailsActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:contentDescription="@string/photo"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textViewDetails"
        android:padding="@dimen/padding_text_view"
        android:layout_margin="@dimen/margin_text_view"/>
    </ScrollView>
</LinearLayout>


